PKG_CPPFLAGS = -Iargon2/include

ARGON2_OBJS = \
	argon2/blake2/blake2b.o \
	argon2/argon2.o \
	argon2/core.o \
	argon2/encoding.o \
	argon2/thread.o \
	argon2/ref.o

